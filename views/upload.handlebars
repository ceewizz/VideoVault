<div class="upload-form-container">
  <h2>Upload</h2>
  <form class="upload-form">
    <label for="type">Type</label>
    <select id="type" name="type">
      <option value="local">Local Image</option>
      <option value="url">URL</option>
      <option value="url">URL to Image</option>
    </select>

    <label for="location">Location</label>
    <select id="location" name="location">
      <!-- Populate with actual folder names -->
      <option value="folder1">Folder 1</option>
      <option value="folder2">Folder 2</option>
    </select>

    <label for="folder-name">Folder Name (If new folder)</label>
    <input type="text" id="folder-name" name="folder-name" placeholder="Enter folder name">

    <label for="url">URL</label>
    <input type="url" id="url" name="url" placeholder="Enter URL">

    <label for="item-name">Item Name</label>
    <input type="text" id="item-name" name="item-name" placeholder="Enter item name">

    <label for="file">Image File</label>
    <input type="file" id="file" name="file" accept="image/*">

    <button type="submit">Upload</button>
  </form>
</div>